<main class="posts-index">
  <%= render 'shared/header' %>
  <section class="index-main-contents">
    <section class="main-left">
      <h1 class="item-review-title">Item Review</h1>
      
      <div class="shop-contents-link">
        <%= link_to "商品情報登録", new_item_path, class: "item-register-buttton" %>
        <%= link_to "商品を検索する", search_items_path, class: "shop-search-buttton" %>
      </div> 

      <%# レビュー一覧 %>
      <ul class="item-lists">
        <% @items.each do |item|%>
          <%= link_to item_path(item) do %>
            <li class="item-list">
              <div class="item-image">
                <%= image_tag item.images[0] %>
              </div>
              <div class="item-contents">
                <div class="item-title"><%= item.name %></div>
                  <div class="item-date"><p><%= item.updated_at.to_s(:datetime) %></p></div>
                </div>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    </section>

    <%# ユーザー情報 %>
    <%= render 'shared/userpro'%>
  </section>
  <%= render 'shared/footer' %>
</main>