<main class="show-new">
  <section>
    <header class='top-page-header'>
      <p class="header-title">wanday!</p>
    </header>
  </section>
  <section>
    <div class="show-contents">
      <% if user_signed_in? && current_user.id == @post.user_id %>
        <i class="fas fa-edit" id="lists"></i>
        <ul class="show-lists hidden" id="pull-down">
          <li><%= link_to '編集する', edit_post_path(@post), method: :get,class: "pull-down-list" %></li>
          <li><%= link_to '削除する', post_path(@post), method: :delete,class: "pull-down-list" %></li>
        </ul>
      <% end %>

      <div class="show-img-field">
        <% @post.images.each do |image| %>
          <%= image_tag image, class: 'show-img' %>
        <% end %>
      </div>
      <div class="show-data">
       <%= @post.updated_at.to_s(:datetime) %>
      </div>
      <div class="show-caption-field">
        <p><%= @post.caption %></p>
      </div>
      <div class="show-sub-content">
        <i class="far fa-comment fa-2x"></i>
        <p>コメント 5件</p>
        <i class="far fa-heart fa-2x"></i>
        <p>いいね 10件</p>
      </div>
      
      <%# コメント一覧 %>
      <div class="comment-box" id="comment-box">
        <div id="comments">
          <% @post.comments.each do |comment| %>
            <div class="comment">
              <%=link_to "#{comment.account.nickname}", home_path(comment.account), class:"user-info" %>
              <p><%= comment.comment%></p>
            </div>
          <% end %>
        </div>
      </div>
      <div class="comment-field">
        <% if user_signed_in? %>
          <%= form_with model: [@post, @comment], id: "comment_form" do |f| %>
            <%= f.text_area :comment , class: "comment-text"%>
          <%= f.submit "コメントする", type: 'submit', class: "comment-btn"%>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>
  <section>
    <footer class="top-page-header">
      <p class="footer-title">wanday!</p>
      <p class="footer-text">Copyright © 2021 wanday! All rights reserved.</p>
    </footer>
  </section>
</main>
