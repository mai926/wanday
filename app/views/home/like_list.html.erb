<main class="mypage">
  <%= render 'shared/show_header' %>
  <section>
    <div class="mypage-contents">
    <%= render partial: 'user_detail', locals: { user: @user } %>
    
    <%# いいね・一覧画面切り替え %>
    <div class="mypage-icon-lists">
      <ul class="mypage-icon-list">
        <%= link_to home_path(@user) do %>
          <li class="icon-select"><i class="far fa-image fa-2x"></i><p class="unchoice-icon">投稿一覧</p></li>
        <% end %>
        <li class="icon-select"><i class="fas fa-heart fa-2x choice-icon"></i><p class="choice-icon-info">いいね一覧</p></li>
      </ul>
    </div>
    <%# いいねした投稿一覧 %>
      <div class="mypage-middle">
        <ul class="img-lists">
          <% @likes.each do |like|%>
            <li>
              <%= link_to post_path(like.post_id) do %>
                <%= image_tag like.post.images[0], class: "mypage-img" %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

`    </div>
  </section>
  <%= render 'shared/footer' %>
</main>
