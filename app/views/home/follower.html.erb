<div class="mypage-contents">
  <%= render 'shared/header' %>
  <%= render partial: 'user_detail', locals: { user: @user } %>

  <%# フォロワー一覧 %>
  <section>
    <div class="follow-main">
      <h1 class="follow-title">フォロワー</h1>
        <ul>
          <% @follower_users.each do |follower_user| %>
            <li class="follow-list">
              <%= link_to image_tag(follower_user.account.images[0] ,class: "follow-user-icon"), home_path(follower_user) if follower_user.account.images.attached?%>
              <% if follower_user.account.images.length == 0%>
                <%= link_to image_tag("profile-user.png" ,class: "follow-user-icon"), home_path(follower_user)  %>
              <% end %>
              <div class="follow-account-detail">
                <%= link_to home_path(follower_user) do%>
                  <p class="follow-nickname"><%= follower_user.account.nickname %></p>
                  <p class="follow-id"><%= follower_user.account.account_id %></p>
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
    </div>
  </section>
  <%= render 'shared/footer' %>
</div>