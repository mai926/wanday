<main class="posts-new">
  <%= render 'shared/header' %>
  <section>
    <div class="review-new-contents">
      <h1 class="form-title">お店のレビューを投稿する</h1>
      <%= form_with(model: [@shop, @review], local: true) do |f| %>   
        <%= render "devise/shared/error_messages", model: f.object %>
        <div class="review-star-icon" id="evaluate_stars">
          <%= f.hidden_field :rate, class:"item-field" %>
        </div>
        <script>
          $('#evaluate_stars').raty({
            size     : 20,
            half: true,
            starOn: "<%= asset_path('star.png') %>",
            starOff: "<%= asset_path('star-empty.png') %>",
            starHalf: "<%= asset_path('star-half-empty.png') %>",
            scoreName: 'shop_review[rate]' //登録するモデル名とカラム名を記述
          });
        </script>

        <div class="review-star-info">
          <p>星の数で評価をしましょう</p>
        </div>
        <div class="item-new-content">
          <%= f.text_field :title, class:"item-field", id:"title", placeholder:"レビュータイトル", maxlength:"100" %>
        </div>
        <div class="item-new-content">
          <%= f.text_area :comment, class:"item-field", id:"content", placeholder:"レビュー詳細（250字以内）", maxlength:"250" %>
        </div>
        <%= f.submit "投稿する" ,class:"posts-new-send" %>
      <%end%>
    </div>
  </section>
  <%= render 'shared/footer' %>
</main>
