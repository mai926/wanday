<main class="registrations-new">
  <h1 class="new-title">wanday!へようこそ！</h1>
  <section>
    <div class="new-contents">
      <h2 class="form-title">アカウント作成</h2>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <%= render "devise/shared/error_messages", model: f.object %>

        <div class="new-content">
          <%= f.label :name,'名前' %>
          <%= f.text_field :name, class:"small-field", id:"name", placeholder:"例）鈴木太郎", maxlength:"40", autofocus: true  %>
        </div>
        <div class="new-content">
          <%= f.label :email,'メールアドレス' %><br />
          <%= f.email_field :email, class:"small-field", id:"email", placeholder:"PC・携帯どちらでも可" %>
        </div>
        <div class="new-content">
          <%= f.label :password,'パスワード' %><br />
          <%= f.password_field :password, class:"small-field", id:"password", placeholder:"6文字以上の半角英数字" %>
        </div>
        <%= f.submit "次へ" ,class:"send" %>
      <%end%>
    </div>
  </section>
  <%= render 'shared/footer' %>
</main>
